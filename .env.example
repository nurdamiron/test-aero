# Окружение
NODE_ENV=development
PORT=3333

# Конфигурация БД
# Для Docker: DB_HOST=mysql
# Для локального MySQL: DB_HOST=localhost
DB_HOST=localhost
DB_PORT=3306
DB_USER=erp_user
DB_PASSWORD=erp_password
DB_NAME=erp_aero

# JWT секреты (должны быть разными, минимум 32 символа)
# Генерация: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=your_access_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here

# Время жизни токенов
JWT_ACCESS_EXPIRY=10m
JWT_REFRESH_EXPIRY=7d

# Bcrypt
BCRYPT_ROUNDS=10

# CORS (* для разработки, конкретный домен для продакшена)
CORS_ORIGIN=*

# Загрузка файлов
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
